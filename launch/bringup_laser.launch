<launch>

    <arg name="robot_name" default="kezbot" />

    <node name="rplidar$(arg robot_name)"
        pkg="kezbot_v2"
        type="kezbot_v2_rplidar_node"
        args="$(arg robot_name)"
        output="screen">

        <param name="serial_port"       type="string"   value="/dev/ttyUSB1" />
        <param name="serial_baudrate"   type="int"      value="115200" />
        <param name="frame_id"          type="string"   value="$(arg robot_name)/laser" />
        <param name="inverted"          type="bool"     value="false" />
        <param name="angle_compensate"  type="bool"     value="true" />

    </node>

    <node pkg="tf" type="static_transform_publisher"
        name="$(arg robot_name)_laser_tf_broadcaster"
        args="0 0 0.15 0 0 0 1 $(arg robot_name)/base_link $(arg robot_name)/laser 100" />
                                                                                      

</launch>
